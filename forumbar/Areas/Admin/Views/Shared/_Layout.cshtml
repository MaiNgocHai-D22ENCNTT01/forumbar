<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Scripts/js")
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navAdmin" aria-expanded="false">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Home")">BARTENDER ADMIN</a>
            </div>
            <div class="collapse navbar-collapse" id="navAdmin">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","BaiViet")">POSTS</a></li>
                    <li><a href="@Url.Action("Index","USER_INFOS")">USER</a></li>
                    <li><a href="@Url.Action("Index","BaiViet")">ARTICLE </a></li>
                    <li><a href="@Url.Action("Index","BinhLuan")">COMMENT </a></li>
                    <li><a href="@Url.Action("Index","ChuDe")">DISCUSSION TOPIC </a></li>
                    <li><a href="@Url.Action("Index","SANPHAMs")">PRODUCT</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("Logout", "Home")" onclick="return confirm('Bạn có chắc chắn muốn đăng xuất không?');">
                            <span class="glyphicon glyphicon-log-out"></span> Log out
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="container well">
        <div style="text-align:center;">
            <p>ADMIN</p>
        </div>
    </footer>

    <!-- Render the optional Scripts section here -->
    @RenderSection("Scripts", required: false)
</body>
</html>
