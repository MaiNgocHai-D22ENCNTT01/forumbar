@model IEnumerable<forumbar.Models.BAIVIET>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Post Title</th>
            <th>Topic</th>
            <th>Author</th>
            <th>Publish Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TieuDe</td>
                <td>@item.CHUDE.TenChuDe</td>
                <td>@item.USER_INFO.UserName</td>
                <td>@item.ThoiGianDang.ToString("dd/MM/yyyy HH:mm:ss")</td>
                <td>
                    @Html.ActionLink("Details", "Details", "BaiViet", new { id = item.IdBaiViet }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Xóa", "Delete", "BaiViet", new { id = item.IdBaiViet }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bạn có chắc chắn muốn xóa bài viết này?')" })
                </td>
            </tr>
        }
    </tbody>
</table>

