@model IEnumerable<forumbar.Models.SANPHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<p>
    <a href="@Url.Action("Create", "SANPHAMs")" class="btn btn-success">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Original Price</th>
            <th>Stock Quantity</th>
            <th>Image</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TenSP)</td>
                <td>@Html.DisplayFor(modelItem => item.GiaGoc)</td>
                <td>@Html.DisplayFor(modelItem => item.SLTon)</td>
                <td class="topic-data">
                    <img src="~/images/@item.Anh" style="width: 50px; height: 50px" /><br>
                </td>
                <td>@Html.DisplayFor(modelItem => item.DANHMUCSP.TenDM)</td>
                <td>
                    <a href="@Url.Action("Edit", "SANPHAMs", new { id = item.MaSP })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Details", "SANPHAMs", new { id = item.MaSP })" class="btn btn-info">Details</a>
                <td>
                    <form action="@Url.Action("Delete", "SANPHAMs", new { id = item.MaSP })" method="post" style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
