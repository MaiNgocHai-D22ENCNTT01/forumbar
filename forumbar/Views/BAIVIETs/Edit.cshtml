@model forumbar.Models.BAIVIET
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<header>
    <script src="~/ckeditor/ckeditor.js"></script>

</header>
<section>
    <div class="feature-photo">
        <figure><img src="~/images/resources/timeline-1.jpg" alt=""></figure>
        <div class="container-fluid">
            <div class="row merged">
                <div class="col-lg-2 col-sm-3">
                    <div class="user-avatar">
                        <figure>
                            <img src="~/images/resources/@Model.USER_INFO.Avatar" alt="">
                        </figure>
                    </div>
                </div>
                <div class="col-lg-10 col-sm-9">
                    <div class="timeline-info">
                        <ul>
                            <li class="admin-name">
                                <h5>@Model.USER_INFO.FullName</h5>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <div style="margin-top: 30px;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-10" style="margin-left:30px">
                    <div class="row" id="page-contents">
                        <div class="col-lg-12" style="margin-left:10px">
                            <div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh;">
                                <div class="col-md-9">
                                    @using (Html.BeginForm("Edit", "BAIVIETs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(model => model.IdBaiViet)

                                    <div class="form-horizontal bg-light p-4 rounded shadow">
                                        <h4 class="text-center mb-4">ADD POST</h4>
                                        <hr />
                                        <div class="form-group mb-3">
                                            <div class="col-md-12">
                                                @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Enter Title" } })
                                                @Html.ValidationMessageFor(model => model.TieuDe, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group mb-3">
                                            <div class="col-md-12">
                                                @Html.TextAreaFor(model => model.NoiDung, new { @class = "form-control", rows = 5, required = "required", placeholder = "Enter Content", id = "editor" })
                                                @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Post Image")
                                            <input type="file" name="Anh" class="form-control" />
                                            @if (Model.Anh != null)
                                            {
                                                <img src="~/images/@Model.Anh" alt="Current Image" width="100" height="100" />
                                            }
                                        </div>

                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </div> 
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>

<script>
    CKEDITOR.replace('editor');
</script>