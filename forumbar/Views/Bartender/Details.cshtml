@using forumbar.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}

<h2 class="text-center my-4">Chi Tiết Sản Phẩm</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <!-- Hình ảnh sản phẩm -->
            <img src="@Url.Content("~/images/" + @Model.Anh)"
                 class="img-responsive product-image"
                 alt="@Model.TenSP"
                 onerror="this.onerror=null; this.src='@Url.Content("~/images/default-product.jpg")';"
                 style="height: 400px; object-fit: cover;">
        </div>
        <div class="col-md-6">
            <!-- Thông tin sản phẩm -->
            <h3>@Model.TenSP</h3>
            <p class="text-danger fw-bold">@string.Format("{0:N0}", Model.GiaGoc) VNĐ</p>
            <p class="text-muted">Số lượng tồn: @Model.SLTon</p>
            <p class="text-muted">Mô tả: @Model.MoTa</p> <!-- Hiển thị mô tả sản phẩm -->
            <!-- Nút thêm vào giỏ hàng -->
            <form action="/Cart/AddToCart" method="post">
                <input type="hidden" name="productId" value="@Model.MaSP" />
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-shopping-cart"></i> Thêm vào giỏ hàng
                </button>
            </form>
        </div>
    </div>
</div>

<!-- CSS cho ảnh sản phẩm -->
<style>
    .product-image {
        width: 100%; /* Đảm bảo ảnh chiếm toàn bộ chiều rộng của khung */
        height: 400px; /* Chỉnh chiều cao ảnh */
        object-fit: cover; /* Cắt ảnh theo tỷ lệ mà không bị méo */
        border-radius: 8px; /* Bo góc ảnh nếu cần */
    }
</style>
